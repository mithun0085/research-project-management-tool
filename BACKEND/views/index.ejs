<body>


  <div className="backgrund3">
    <div class="col-mb-8 mt-4 mx-auto">
      
          
            


        
       <center>

        <div class="w3-card-4 w3-margin w3-white"style="width:900px" >






  <div class="container">
    <div class="row">
      <div class="col-md-6 m-auto">
        
      
        <h2 >Topic Details Document Submission</h2>
        <hr/>

        <ul>
          <li>Upload a pdf file</li>
          <li>File name should be (group_id.pdf)</li>
          <li>Limit to a maximum of 3 pages</li>
          <li>Include relevant Student ID(s) on first page</li>
          <li style="color:red">Deadline 23:00 p.m 21st oct 2022</li>
        </ul> 

        <br><br>
        <form action="/upload" method="POST" enctype="multipart/form-data">
          <div class="custom-file mb-3">
            <input type="file" name="file" id="file" class="custom-file-input" >
            <label for="file" class="custom-file-label">Choose File</label>
          </div>

          <br><br>
          <input type="submit" value="Add Submission" class="w3-button w3-deep-purple">
          
        </form>
        <hr>



      
      <% if(files){ %>
        <% files.forEach(function(file) { %>
          <div class="card card-body mb-3">
            <% if(file.isApplication) { %>
              <image src="image/<%= file.filename %>" alt="">
              <% } else { %>
                <%= file.filename %>
                  <% } %>
                  <form method="POST" action="/files/<%= file._id %>?_method=DELETE">
                    <button class="btn btn-dark fa fa-trash"></button>
                  </form>
          </div>
          <% }) %>
            <% } else { %>
              <p>No files to show</p>
              <% } %>

         
    </div>
  </div>
</div>



</div>
